{
  "name": "salat-time",
  "version": "0.1.0",
  "description": "Location based daily salat schedule",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm run webpack-dev",
    "build": "npm run clean && npm run webpack-build",
    "clean": "node task/clean",
    "webpack-build": "NODE_ENV=production webpack --progress --hide-modules --config ./config/webpack.prod.config.js",
    "webpack-dev": "NODE_ENV=development webpack-dev-server --https --inline --hot --colors --config ./config/webpack.dev.config.js",
    "test": "karma start config/karma.conf.js",
    "lint": "eslint src/*/**/*.js --fix",
    "format": "prettier src/*/**/*.js --write"
  },
  "author": "Danu Widatama",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ],
      "stage-0"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.0",
    "eslint": "^4.18.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-import": "^2.8.0",
    "html-webpack-exclude-assets-plugin": "0.0.7",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-detect-browsers": "^2.2.6",
    "karma-tap": "^4.1.3",
    "karma-tap-pretty-reporter": "^4.0.0",
    "karma-webpack": "^3.0.0",
    "mini-css-extract-plugin": "^0.4.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.0",
    "postcss-nested": "^3.0.0",
    "prettier": "^1.10.2",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "style-loader": "^0.21.0",
    "tap-summary": "^4.0.0",
    "tape": "^4.8.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "vue-loader": "^15.0.9",
    "vue-template-compiler": "^2.5.16",
    "webapp-webpack-plugin": "^2.1.0",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-stylish": "^0.1.8",
    "workbox-webpack-plugin": "^3.2.0"
  },
  "dependencies": {
    "date-fns": "^2.0.0-alpha.8",
    "jstz": "^2.0.0",
    "normalize.css": "^7.0.0",
    "url-parse": "^1.4.0",
    "vue": "^2.5.16",
    "vuex": "^3.0.1"
  }
}
